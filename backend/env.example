# Backend Environment Configuration
# Copy this file to .env and update the values

# """
# Insert API Credentials here
# 
# Your NVIDIA API Key for accessing Trellis NIM
# Get this from https://build.nvidia.com/microsoft/trellis
# """
TRELLIS_NIM_API_KEY=your_nvidia_api_key_here

# Trellis NIM API Configuration
TRELLIS_NIM_URL=http://localhost:8080

# Server Configuration
NODE_ENV=production
PORT=3001

# Frontend CORS Configuration
FRONTEND_URL=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_REQUEST=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Job Management
MAX_JOBS_IN_MEMORY=1000
JOB_CLEANUP_INTERVAL_MS=3600000
